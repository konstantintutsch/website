---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    {% for page in site.pages %}
    {% if page.url != "/.htaccess" and page.url != "/errors/403.html" and page.url != "/errors/404.html" and page.url != "/feed.xml" and page.url != "/robots.txt" and page.url != "/sitemap.xml" %}
    <url>
        <loc>{{ site.url }}{{ page.url | remove: 'index.html' }}</loc>
        <lastmod>{% if page.last_modified %}{% assign modified = page.last_modified %}{% else %}{% assign modified = site.posts[0].date | date: "%Y-%m-%d " | append: site.posts[0].time %}{% endif %}{{ modified | date_to_xmlschema }}</lastmod>
    </url>
    {% endif %}
    {% endfor %}

    {% for post in site.posts %}
    <url>
        <loc>{{ site.url }}{{ post.url | remove: 'index.html' }}</loc>
        <lastmod>{{ post.last_modified | date_to_xmlschema }}</lastmod>
    </url>
    {% endfor %}
</urlset>
